{
  "private": true,
  "scripts": {
    "reset": "lerna clean --yes",
    "build-packages": "yarn workspaces foreach --exclude 'jss-sample-*' run build",
    "build-apps": "lerna run build --scope 'jss-sample-*' --npm-client npm",
    "lint-packages": "yarn workspaces foreach --exclude 'jss-sample-*' run lint",
    "lint-apps": "yarn workspaces foreach --exclude '@sitecore-jss/*' run lint",
    "coverage-packages": "yarn workspaces foreach --exclude 'jss-sample-*' run coverage",
    "install-git-hooks": "node ./scripts/install-hooks.js",
    "generate-docs": "lerna run generate-docs"
  },
  "author": {
    "name": "Sitecore Corporation",
    "url": "https://jss.sitecore.com"
  },
  "license": "Apache-2.0",
  "homepage": "https://jss.sitecore.com",
  "bugs": {
    "url": "https://github.com/sitecore/jss/issues"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jsdoc": "^30.7.9",
    "eslint-plugin-prettier": "^3.3.0",
    "lerna": "^3.22.0",
    "nyc": "^14.1.1",
    "prettier": "^1.14.3",
    "typedoc": "^0.22.5",
    "typedoc-plugin-markdown": "^3.11.3",
    "typescript": "~4.3.5"
  },
  "workspaces": [
    "packages/*",
    "samples/*"
  ],
  "packageManager": "yarn@3.1.0"
}
