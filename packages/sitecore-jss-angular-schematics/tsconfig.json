{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "tsconfig",
    "module": "commonjs",
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "rootDir": "src/",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "types": ["jasmine", "node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/*/component-files/**/*", "src/*/manifest-files/**/*"]
}
