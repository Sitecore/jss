{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "pretty": true,
    "jsx": "react",
    "skipLibCheck": true,
    "outDir": "dist",
    "strictNullChecks": false,
    "lib": ["es2017"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "types",
    "typings",
    "dist",
    "test-data/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "__snapshots__"
  ]
}
