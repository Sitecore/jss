{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run mocha",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--require",
        "@babel/register",
        "./src/**/*.test.js",
        "--no-timeouts",
        "./dist/test"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null
    }
  ]
}