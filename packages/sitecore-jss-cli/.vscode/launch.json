{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run mocha",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "-require",
        "ts-node/register",
        "--no-timeout",
        "--colors",
        "./src/**/*.test.ts"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null
    },
    {
      "name": "Attach to Process",
      "type": "node",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "port": 9229
    }
  ]
}